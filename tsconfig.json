{
  "compilerOptions": { 
    "target": "es5",
    "module": "commonjs", 
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/@customTypes/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/@customTypes"
  ]
}
